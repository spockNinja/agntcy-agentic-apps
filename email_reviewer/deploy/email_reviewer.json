{
  "authors": ["Cisco Systems Inc."],
  "annotations": {
    "type": "llama-index"
  },
  "created_at": "2025-05-21T00:00:00Z",
  "name": "org.agntcy.mail_reviewer",
  "description": "Review emails",
  "version": "0.0.1",   
  "schema_version": "0.3.1",
  "skills": [
    {
      "category_name": "Natural Language Processing",
      "category_uid": 1,
      "class_name": "Contextual Comprehension",
      "class_uid": 10101
    },
    {
      "category_name": "Natural Language Processing",
      "category_uid": 1,
      "class_name": "Text Style Transfer",
      "class_uid": 10206
    },
    {
      "category_name": "Natural Language Processing",
      "category_uid": 1,
      "class_name": "Tone and Style Adjustment",
      "class_uid": 10602
    },
    {
      "category_name": "Natural Language Processing",
      "category_uid": 1,
      "class_name": "Problem Solving",
      "class_uid": 10702
    },
    {
      "category_name": "Natural Language Processing",
      "category_uid": 1,
      "class_name": "Text Paraphrasing",
      "class_uid": 10203
    },
    {
      "category_name": "Natural Language Processing",
      "category_uid": 1,
      "class_name": "Knowledge Synthesis",
      "class_uid": 10303
    }
  ],
  "locators": [
    {
      "type": "source-code",
      "url": "https://github.com/spockNinja/agntcy-agentic-apps/tree/main/email_reviewer"
    }
  ],
  "extensions": [ 
    {
      "name": "oasf.agntcy.org/feature/runtime/manifest",
      "data": {
        "acp": {
          "capabilities": {
            "threads": false,
            "interrupts": false,
            "callbacks": false
          },
          "input": {
            "$defs": {
              "TargetAudience": {
                "enum": [
                  "general",
                  "technical",
                  "business",
                  "academic"
                ],
                "title": "Target Audience",
                "type": "string"
              }
            },
            "properties": {
              "email": {
                "description": "The email content to be reviewed and corrected",
                "title": "Email",
                "type": "string"
              },
              "target_audience": {
                "$ref": "#/$defs/TargetAudience",
                "description": "The target audience for the email, affecting the style of review"
              }
            },
            "required": [
              "email",
              "target_audience"
            ],
            "title": "Review Your Email",
            "type": "object"
          },
          "output": {
            "properties": {
              "correct": {
                "description": "Indicates whether the email is correct and requires no changes",
                "title": "Correct",
                "type": "boolean"
              },
              "corrected_email": {
                "anyOf": [{"type": "string"}, {"type": "null"}],
                "default": null,
                "description": "The corrected version of the email, if changes were necessary",
                "title": "Corrected Email"
              },
              "review_result": {
                "default": "",
                "description": "A description containing the email changes",
                "title": "Review Result",
                "type": "string"
              }
            },
            "required": [
              "correct"
            ],
            "title": "Email Review Results",
            "type": "object"
          },
          "config": {
            "properties": {},
            "title": "ConfigSchema",
            "type": "object"
          }
        },
        "deployment": {
          "deployment_options": [
            {
              "type": "source_code",
              "name": "src",
              "url": "github.com/agntcy/agentic-apps.git//email_reviewer",
              "framework_config": {
                "framework_type": "llamaindex",
                "path": "email_reviewer:email_reviewer_workflow"
              }
            }
          ],
          "env_vars": [
            {
              "desc": "Azure key for the OpenAI service",
              "name": "AZURE_OPENAI_API_KEY"
            },
            {
              "desc": "Azure model for the OpenAI service",
              "name": "AZURE_OPENAI_MODEL"
            },
            {
              "desc": "Azure deployment name for the OpenAI service",
              "name": "AZURE_OPENAI_DEPLOYMENT_NAME"
            },
            {
              "desc": "Azure API version for the OpenAI service",
              "name": "AZURE_OPENAI_API_VERSION"
            },
            {
              "desc": "Azure endpoint for the OpenAI service",
              "name": "AZURE_OPENAI_ENDPOINT"
            }
          ],
          "agent_deps": []
        }
      },
      "version": "v0.2.2"
    }
  ]
}
